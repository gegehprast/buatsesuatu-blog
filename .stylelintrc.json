{
    "extends": "stylelint-config-recommended",
    "rules": {
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["font-named-instance"],
                "ignoreAtRules": ["font-face"]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "extends",
                    "tailwind",
                    "screen",
                    "responsive",
                    "font-named-instance"
                ]
            }
        ],
        "block-no-empty": null,
        "unit-whitelist": ["em", "rem", "s", "%", "px", "ms", "deg", "vw", "vh"]
    }
}